@startuml ComponentInteraction
skinparam backgroundColor #1e1e1e
skinparam textBackgroundColor #ffffff
skinparam ArrowColor #0ea5e9

package "React Components" {
    component Dashboard
    component JobDescription
    component ResumeScan
    component Reports
    component EmailCenter
    component CandidateDetail
}

package "Services" {
    component JobService
    component ResumeService
    component MatchingService
    component ReportService
    component EmailService
}

package "Data Access" {
    component MongoDBRepository
}

Dashboard --> JobService: fetchJobs()
Dashboard --> ReportService: fetchMetrics()

JobDescription --> JobService: createJob()\nupdateJob()

ResumeScan --> ResumeService: uploadResumes()\ntriggerScan()

Reports --> MatchingService: getMatches()
Reports --> ReportService: generateReport()

CandidateDetail --> ReportService: getCandidateDetail()
CandidateDetail --> MatchingService: getMatchDetails()

EmailCenter --> EmailService: sendEmail()

JobService --> MongoDBRepository: query()\nsave()
ResumeService --> MongoDBRepository: query()\nsave()
MatchingService --> MongoDBRepository: query()
ReportService --> MongoDBRepository: query()
EmailService --> MongoDBRepository: query()\nsave()

@enduml